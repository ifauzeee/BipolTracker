# ==================================================
# BIPOL TRACKER - Environment Configuration
# ==================================================
# Copy this file to .env and fill in your values.
# Do NOT commit .env to version control!
# ==================================================

# --------------------------------------------------
# Server Configuration
# --------------------------------------------------
# Port for the web server (default: 3000)
PORT=3000

# --------------------------------------------------
# Database - Supabase
# --------------------------------------------------
# Your Supabase project URL
SUPABASE_URL=https://your-project.supabase.co

# Your Supabase anon/public key
SUPABASE_KEY=your-supabase-anon-key

# --------------------------------------------------
# Security
# --------------------------------------------------
# Secret key for session encryption (CHANGE THIS!)
SESSION_SECRET=your-super-secret-key-change-me

# --------------------------------------------------
# Alert Thresholds
# --------------------------------------------------
# Gas level above this value will trigger a warning (default: 600)
GAS_ALERT_THRESHOLD=600

# --------------------------------------------------
# Bus Status Configuration
# --------------------------------------------------
# If bus speed is 0 for more than X minutes, status changes from
# "Berhenti" (stopping) to "Parkir" (parked). Default: 5 minutes.
BUS_STOP_TIMEOUT_MINUTES=5