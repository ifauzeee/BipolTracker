# ==================================================
# BIPOL TRACKER - Environment Configuration
# ==================================================
# Copy this file to .env and fill in your values.
# Do NOT commit .env to version control!
# ==================================================

# --------------------------------------------------
# Server Configuration
# --------------------------------------------------
# Port for the web server (default: 3000)
PORT=3000

# UDP port for receiving GPS data from ESP32 (hardcoded: 3333)
# Note: This is NOT configurable via env, change in server.js if needed
# UDP_PORT=3333

# --------------------------------------------------
# Database - Supabase (REQUIRED)
# --------------------------------------------------
# Your Supabase project URL
# Get from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project.supabase.co

# Your Supabase anon/public key (or service role key for admin operations)
# Get from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_KEY=your-supabase-anon-key

# --------------------------------------------------
# Security (IMPORTANT - Change in Production!)
# --------------------------------------------------
# Secret key for session encryption
# Generate a strong random string for production: openssl rand -hex 32
SESSION_SECRET=your-super-secret-key-change-me-in-production

# Enable HTTPS for secure cookies (set to 'true' in production with SSL)
USE_HTTPS=false

# --------------------------------------------------
# Environment & CORS
# --------------------------------------------------
# Environment mode (development/production)
NODE_ENV=development

# Allowed origins for CORS (comma separated, no spaces)
# Set to your domain in production, e.g.: https://bipol.example.com
# Use '*' to allow all origins (not recommended for production)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# --------------------------------------------------
# Alert Thresholds
# --------------------------------------------------
# Gas level (MQ-2 sensor value) above this threshold triggers a warning
# Lower values = more sensitive. Default: 600
GAS_ALERT_THRESHOLD=600

# --------------------------------------------------
# Bus Status Configuration
# --------------------------------------------------
# When bus speed is 0 for more than X minutes, status changes from
# "Berhenti" (stopping) to "Parkir" (parked). Default: 5 minutes.
BUS_STOP_TIMEOUT_MINUTES=5

# --------------------------------------------------
# Admin Seeding (Optional - for seed_admin.js script)
# --------------------------------------------------
# Default credentials when running: node scripts/seed_admin.js
# Change these before seeding, or change password after first login
ADMIN_DEFAULT_USER=admin
ADMIN_DEFAULT_PASS=admin123

# ==================================================
# ESP32/Hardware Configuration Reference (NOT env vars)
# ==================================================
# These are configured in firmware/esp32_tracker_udp.ino:
# - SECRET_AS: APN for your SIM card provider
# - SECRET_SERVER_IP: Your server's public IP address
# - SECRET_UDP_PORT: UDP port (default: 3333, must match server)
# ==================================================